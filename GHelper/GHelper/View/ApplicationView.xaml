<UserControl     
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="GHelper.View.ApplicationView">
    
    
    <StackPanel Orientation="Vertical">
        <TextBlock Text="{x:Bind Application.DisplayName, Mode=OneWay, FallbackValue=''}" HorizontalAlignment="Center"/>
        <TextBlock Text="{x:Bind Application.Application.ApplicationID, Mode=OneWay, FallbackValue=''}" HorizontalAlignment="Center"/>
        <TextBlock Text="{x:Bind Application.Application.PosterURL, Mode=OneWay, FallbackValue=''}" HorizontalAlignment="Center"/>
        <TextBlock Text="{x:Bind Application.Application.LastRunTime.ToString(), Mode=OneWay, FallbackValue=''}" HorizontalAlignment="Center"/>
    </StackPanel>
    
</UserControl>