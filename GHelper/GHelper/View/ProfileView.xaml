<UserControl     
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="GHelper.View.ProfileView">
    
    <StackPanel Orientation="Vertical">
        <TextBlock Text="{x:Bind Profile.DisplayName, Mode=OneWay}" HorizontalAlignment="Center"/>
        <TextBlock Text="{x:Bind Profile.Profile.ApplicationID, Mode=OneWay}" HorizontalAlignment="Center"/>
        <TextBlock Text="{x:Bind Profile.Profile.ActiveForApplication.ToString(), Mode=OneWay}" HorizontalAlignment="Center"/>
        <TextBlock Text="{x:Bind Profile.Profile.PosterURL, Mode=TwoWay}" HorizontalAlignment="Center"/>
    </StackPanel>
    
</UserControl>