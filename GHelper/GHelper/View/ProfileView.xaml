<UserControl     
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="GHelper.View.ProfileView">
    
    <StackPanel Orientation="Vertical">
        <TextBlock Text="{x:Bind Profile.DisplayName,                             Mode=OneWay, FallbackValue=''}"/>
        <TextBlock Text="{x:Bind Profile.Profile.ApplicationID,                   Mode=OneWay, FallbackValue=''}"/>
        <TextBlock Text="{x:Bind Profile.Profile.ActiveForApplication.ToString(), Mode=OneWay, FallbackValue=''}"/>
        <TextBlock Text="{x:Bind Profile.Profile.PosterURL,                       Mode=OneWay, FallbackValue=''}"/>
    </StackPanel>
    
</UserControl>