<UserControl     
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="GHelper.View.RecordViewControls">
    
    <StackPanel>
        <Button Background="Red">
            <Button.Resources>
                <ResourceDictionary>
                    <ResourceDictionary.ThemeDictionaries>
                        <ResourceDictionary x:Key="Default">
                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1" x:Key="ButtonBackgroundPointerOver">
                                <GradientStop Color="#bfd5407a" Offset="0.0"/>
                                <GradientStop Color="DarkMagenta" Offset="1.0"/>
                            </LinearGradientBrush>
                            <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="DarkMagenta"/>

                        </ResourceDictionary>
                    </ResourceDictionary.ThemeDictionaries>
                </ResourceDictionary>
            </Button.Resources>
            
            <StackPanel>
                <SymbolIcon Symbol="Delete"/>
            </StackPanel>
            
        </Button>
    </StackPanel>
    
</UserControl>