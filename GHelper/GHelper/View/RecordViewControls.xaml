<UserControl     
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="GHelper.View.RecordViewControls">
    
    <StackPanel>
        <Button>
            <Button.Resources>
                <ResourceDictionary>
                    <ResourceDictionary.ThemeDictionaries>
                        <ResourceDictionary x:Key="Default">
                            <SolidColorBrush Color="#d50051" x:Key="ButtonBackground"/>
                            
                            <SolidColorBrush Color="#ff0061" x:Key="ButtonBackgroundPointerOver"/>
                            
                            <SolidColorBrush Color="#98003a" x:Key="ButtonBackgroundPressed"/>
                        </ResourceDictionary>
                    </ResourceDictionary.ThemeDictionaries>
                </ResourceDictionary>
            </Button.Resources>
            
            <StackPanel>
                <SymbolIcon Symbol="Delete"/>
            </StackPanel>
            
        </Button>
    </StackPanel>
    
</UserControl>