<Window
    x:Class="GHelper.View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:utility="using:GHelper.Utility"
    xmlns:viewModel="using:GHelper.ViewModel"
    xmlns:model="using:GHelperLogic.Model"
    mc:Ignorable="d">

    <SplitView PaneBackground="{ThemeResource SystemControlAcrylicElementBrush}"
           IsPaneOpen="True" OpenPaneLength="384" CompactPaneLength="256" DisplayMode="Inline">
        <SplitView.Resources>
            
            <DataTemplate x:Key="ContextTemplate" x:DataType="model:Context">
                <TreeViewItem ItemsSource="{x:Bind Profiles}">
                    <viewModel:ContextView Context="{Binding}"/>
                </TreeViewItem>
            </DataTemplate>
            
            <DataTemplate x:Key="ProfileTemplate" x:DataType="model:Profile">
                <TreeViewItem>
                    <viewModel:ProfileView Profile="{Binding}"/>
                </TreeViewItem>
            </DataTemplate>
            
            <utility:GHubItemTemplateSelector
                x:Key="GHubItemTemplateSelector"
                ContextTemplate="{StaticResource ContextTemplate}"
                ProfileTemplate="{StaticResource ProfileTemplate}" />
            
        </SplitView.Resources>
        <SplitView.Pane>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="GHub Games" Margin="24,8,0,8" Style="{StaticResource TitleTextBlockStyle}"/>
                <TreeView Grid.Row="1" ItemsSource="{x:Bind Contexts}"  
                          ItemTemplateSelector="{StaticResource GHubItemTemplateSelector}">
                </TreeView>
            </Grid>
        </SplitView.Pane>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Margin="12,12,0,0" Style="{StaticResource BaseTextBlockStyle}"/>
            <TextBlock Grid.Row="1" Margin="12,12,0,0" Style="{StaticResource BodyTextBlockStyle}" />
        </Grid>
        
    </SplitView>
</Window>
